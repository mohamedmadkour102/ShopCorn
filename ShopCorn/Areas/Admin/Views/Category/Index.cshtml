@using ShopCorn.DAL.Data
@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewData["Title"] = "Index";
}


<div>
    <a class="btn btn-primary" href="/Category/Create">Create</a>
</div>

<br />
<table class="table table-hover" width="100" >
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>DateOfCreation</td>
        <td>Actions</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        <td>@item.Name </td>
        <td>@item.Description</td>
        <td>@item.CreationDate</td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
                    <i class="fas fa-edit"></i> Update

                </a>
            </td>
            <td>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete

                </a>
            </td>

        </tr>
    }
</table>

